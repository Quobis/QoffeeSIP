shadowColor = #AAC


.border-radius
	border-radius: 8px

.background
	background-color: #EEE

.hidden.span12
	display: none

.shadow
	box-shadow: 0px 0px 8px 0.5px shadowColor

.shadow-inset-big
	box-shadow: inset 0px 0px 8px 1px shadowColor

.layer
	background-color: #FDFDFD
	margin-bottom: 0px
	margin-left: 0px
	@extend .shadow

.vertical-margin
	height: 64px

.messages
	overflow-y: auto
	height: 264px
	background-color: #FDFDFD
	box-shadow: 0px 0px 16px 0.5px #CCC
	margin-bottom: 8px
	border-radius: 4px
	padding: 8px

.well
	font-size: 120%

.emoticon
	width: 20px

.header
	margin-top: 32px
	margin-bottom: 16px
	
.video
	@extend .shadow
	@extend .border-radius

#footer p
	margin-top: 8px
	text-align:right
	font-size: 90%
	font-weight: bold
	color: black

#footer img
	width: 80px
	padding-left: 5px

#notifications
	margin-top: 32px

#chat
	display: none

#media-remote.active
	display: block

#media-local.active
	width: 25%
	opacity: 0.8
	float: right
	z-index: 100

#status
	vertical-align: middle
	margin-bottom: 8px
	font-size: 0.8em
	padding: 8px

#conf
	margin-bottom: 20px
	padding-bottom: 16px
	margin-left: 0px

#flags-media
	display: none

#internal
	@extend .border-radius
	@extend .background
	@extend .shadow-inset-big
	margin-left: -32px
	padding: 24px
	border-radius: 8px
	zindex: 100
	font-weight: bold

#register-info
	@extend .border-radius
	@extend .background
	@extend .shadow-inset-big
	text-align: center
	font-size: 90%
	display: none
	display: none
