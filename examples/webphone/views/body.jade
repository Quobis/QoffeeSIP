body(class="container")
	header(id="logo",class="row-fluid")
		img(src="img/logos/logo.png",class="span3")
		.span1
		div(id="register-info", class="well layer span8")

	div(id="internal", class="row-fluid")

		div(class="row-fluid")
			div(class="span4 media")
				div(id="media-remote", class="shadow")
					video(id="remote", class="row-fluid", autoplay=true, controls=false)
				div(id="media-local", class="shadow")
					video(id="local", class="row-fluid", autoplay=true, controls=false)

			div(class="span4")
				//- div(class="vertical-margin row-fluid")
				div(class="row-fluid")

				div(id="conf", class="well layer row-fluid span12")
					div(class="label span12", id="status") Unregistered

				div(class="row-fluid")

				div(class="row-fluid")
					div(id="form", class="well layer")
						audio(id="sound-calling", class="sound", preload loop)
							source(src="audio/calling.ogg", type="audio/ogg")
							source(src="audio/calling.mp3", type="audio/mpeg")
						audio(id="sound-ringing", class="sound")
							source(src="audio/ringing.ogg", type="audio/ogg", preload loop)
							source(src="audio/ringing.mp3", type="audio/mpeg")

						form(id="form-register", class="slide row-fluid pagination-centered")
							input(id="user-reg", name="user", class="input span12", type="text", placeholder="User", autofocus, required, autocomplete)
							input(id="pass-reg", name="pass", class="input span12", type="password", placeholder="Pass", autocomplete)
							input(id="server-reg", class="input span12", type="text", placeholder="Server (ws://ip:port/path)", type="url")
							input(type="submit",id="register", class="btn btn-info", value="Register")

						form(id="form-call", class="slide row-fluid pagination-centered")
							input(id="ext-call", class="input span12", type="text", placeholder="Extension", required)
							div(class="btn-toolbar")
								input(type="submit", id="call", class="btn btn-success", value="Call")

						div(id="form-calling", class="slide row-fluid pagination-centered")
							class(class="btn-group")
								button(class="btn btn-danger", id="cancel") Hangup

						div(id="form-incoming-call", class="slide row-fluid pagination-centered")
							class(class="btn-group")
								button(class="btn btn-success", id="answer") Answer
								button(class="btn btn-danger", id="hangup") Hangup

						div(id="form-established-call", class="slide row-fluid pagination-centered")
							p(id="timer") 00:00:00
							p
								div(class="btn-group",id="call-conf")
									button(id="toggleMuteAudio", class="btn active")
										i(class="icon-headphones")
									button(id="toggleMuteVideo", type="button", class="btn active")
										i(class="icon-facetime-video")
									button(id="fullscreen",class="btn")
										i(class="icon-fullscreen")
							p
								button(id="hangup-established", class="btn btn-danger") End call

			div(class="span4")
				div(id="chat")
					div(class="messages shadow")
					form(class="form-inline")
						input(type="text", class="input-xlarge")
						input(type="submit", value="Send", class="btn")

		div(id="notifications", class='top-right')

	footer(id="footer",class="row-fluid")
		p Powered by
			a(href="http://qoffeesip.quobis.com", target="_blank")
				img(src="img/qoffeesip.png")
			, a Javascript SIP stack developed by&nbsp
			a(href="http://www.quobis.com", target="_blank") Quobis
			.
